{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock stylesheets %}

{% block javascripts %}
    <script>
      function deletePost(id) {
        fetch(`/posts/${id}`, {
          method: "DELETE",
          headers: {
            "Content-type": "application/json; charset=UTF-8"
          }
        })
        .then((response) => response.json())
        .then((json) => {
          if (json.success) {
            const element = document.getElementById(`card-${id}`);
            element.remove();
          } else {
            alert("Something went wrong");
          }
        });
      }

      function clearData() {
        fetch(`/posts/clear`, {
          method: "DELETE",
          headers: {
            "Content-type": "application/json; charset=UTF-8"
          }
        })
          .then((response) => response.json())
          .then((json) => {
            if (json.success) {
              location.reload();
            } else {
              alert("Something went wrong");
            }
          });
      }

      function downloadData() {
        fetch(`/posts/download`, {
          method: "POST",
          headers: {
            "Content-type": "application/json; charset=UTF-8"
          }
        })
          .then((response) => response.json())
          .then((json) => {
            if (json.success) {
              location.reload();
            } else {
              alert("Something went wrong");
            }
          });
      }
    </script>
{% endblock %}

{% block body %}
    <div class="container">
      <div class="row text-center m-5">
        <div class="col-12 col-md-6">
            <button class="btn btn-primary" onclick="downloadData()">Refresh list</button>
        </div>
        <div class="col-12 col-md-6">
            <button class="btn btn-danger mt-3 mt-md-0" onclick="clearData()">Clear list</button>
        </div>
      </div>
        <div class="row text-center">
            {% for post in posts %}
            <div class="col-12 col-md-6 col-lg-4 mt-3 text-center" id="card-{{ post.sourceId }}">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.body }}</p>
                        <button class="btn btn-danger" onclick="deletePost({{ post.sourceId }})">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
