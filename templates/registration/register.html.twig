{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="row text-center m-5">
    <div class="col-12 offset-md-3 col-md-6 text-center">
        <h2>Register</h2>

        {{ form_start(registrationForm, {'attr': {'class': 'my-custom-form-class'}}) }}
            <div class="form-group">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter email', 'type': 'email'}}) }}
                <div class="form-error">
                    {% include 'err.html.twig' with {'err': errors.email} %}
                </div> 
            </div>

            <div class="form-group">
                <label>Password</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                <div class="form-error">
                    {% include 'err.html.twig' with {'err': errors.plainPassword} %}
                </div>                
            </div>

            <div class="form-group form-check">                
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms) }}
                <div class="form-error">
                    {% include 'err.html.twig' with {'err': errors.agreeTerms} %}
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
